<% provide(:title, "edit class student") %>
<h1>Edit student class</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@class_student) do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      
      <%= f.select(:faculty_id, options_from_collection_for_select(Faculty.all.collect,"id","name"),  class: "form-control") %>
      
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: "Name student class", class: "form-control" %>

      <%= f.label :specialized %>
      <%= f.text_field :specialized, class: "form-control" %>

      <%= f.label :count %>
      <%= f.number_field :count, in: 50...71, class: "form-control" %>

      <%= f.label :start_year %>
      <%= f.date_field :start_year, class: "form-control" %>

      <%= f.label :end_year %>
      <%= f.date_field :end_year, class: "form-control" %>
      
      <%= f.submit "Update Class", class: "btn btn-primary" %>
    <% end %>
  </div> 
</div>