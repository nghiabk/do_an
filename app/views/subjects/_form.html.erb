<%= form_for @book, html: {multipart: true}, remote: true do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= f.label "Category" %>
  <%= f.select :category_id, @categories %>
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>
  <%= f.label :author %>
  <%= f.text_field :author, class: "form-control" %>
  <%= f.label "Publish date" %>
  <%= f.date_field :publish_date, class: "form-control" %>
  <%= f.label "Number Pages" %>
  <%= f.number_field :number_page, class: "form-control" %>  
  <%= f.label "Choose Image" %>
  <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png", id: "upload" %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>