<% provide(:title, "edit category") %>
<h1>Edit subject</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@subject) do |f| %>
      
      <%= f.select(:faculty_id, options_from_collection_for_select(Faculty.all.collect,"id","name"),  class: "form-control") %>
      
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: "Category name", class: "form-control" %>

      <%= f.label :count %>
      <%= f.number_field :count, in: 2...5, class: "form-control" %>
      
      <%= f.submit "Update subject", class: "btn btn-primary" %>
    <% end %>
  </div> 
</div>