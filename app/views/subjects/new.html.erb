<% provide(:title, "new subject") %>
<h1>New Subject</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@subject, html: {multipart: true}) do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      
      <%= f.select(:faculty_id, options_from_collection_for_select(Faculty.all.collect,"id","name"),  class: "form-control") %>

      <%= f.label "Name Subject" %>
      <%= f.text_field :name, placeholder: "Name subject", class: "form-control" %><br>

      <%= f.label "Credit" %>
      <%= f.number_field :credit, in: 2...5, class: "form-control" %>

      <%= f.submit "Create subject", class: "btn btn-primary" %> 
    <% end %>
  </div>
</div>
